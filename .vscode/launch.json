{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "cpp - Build and debug active file",
            "type": "gdb",
            "command": "/usr/bin/g++",
            "args": ["-g", "${workspaceFolder}/app_cpp/*.cpp", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
            "request": "launch",
            "program": "${workspaceFolder}/app_cpp/*.cpp",
            "cwd": "${workspaceFolder}",
            "environment": [],
            "preLaunchTask": "build cpp"
        }
    ]
}

